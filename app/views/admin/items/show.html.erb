<div class="toumei">
	<section class="wrapper flex">
		<h2 class="section-ttl">商品詳細</h2>
		<div class="card-list-container py-5">
		<!--<div class="flex">-->
			<div>
				<div class="image_field">
					<%= image_tag @item.get_image, id: "img_prev", class: "admin_item_image" %>
				</div>
			</div>
			<table class="admin_item_info">
				<tbody>
					<tr>
						<td>商品名</td>
						<td><%= @item.name %></td>
					</tr>
					<tr>
						<td>商品説明</td>
						<td><%= @item.introduction %></td>
					</tr>
					<tr>
						<td>税抜価格</td>
						<td><%= @item.price %>円</td>
					</tr>
					<tr>
						<td>販売ステータス</td>
						<td>
							<% if @item.is_active? %>
								<span class="text-active">販売中</span>
							<% else %>
								<span class="text-invalid">販売停止中</span>
							<% end %>
						</td>
					</tr>
				</tbody>
			</table>
			<div class="flex align-center pl5">
				<%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %>
			</div>
		</div>
	</section>
</div>