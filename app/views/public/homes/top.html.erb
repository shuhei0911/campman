<section class="wrapper flex">

	<div class="content">
		<div class="mv">
			<p></p>
		</div>
		<h2 class="section-ttl">オススメ商品</h2>
		<div class="items">
			<% @items.each do |item| %>
				<%= link_to item_path(item) do %>
					<%#= image_tag item.get_image %>
					<p><%= item.name %></p>
					<p><%= item.with_tax_price %>円</p>
				<% end %>
			<% end %>
		</div>


	</div>
</section>